<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Основной экран (по умолчанию видимый) -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Регистрация"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Вход"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_user_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:visibility="gone"/>

            <Button
                android:id="@+id/clear_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Очистить историю"/>
        </LinearLayout>

        <!-- Контейнер для кнопки распознавания и выбора режима ввода -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Уменьшенная кнопка распознавания -->
            <Button
                android:id="@+id/recognize_mic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/recognize_microphone"
                android:layout_marginEnd="8dp"/>

            <!-- Выпадающий список для выбора режима ввода -->
            <Spinner
                android:id="@+id/input_mode_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/input_modes"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

        <EditText
            android:id="@+id/result_text"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:scrollbars="vertical"
            android:scrollbarStyle="insideInset"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:maxLines="1000"
            android:inputType="textMultiLine"
            android:textIsSelectable="true"
            android:longClickable="true"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:cursorVisible="false"/>

        <LinearLayout
            android:id="@+id/photo_preview_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="8dp"
            android:background="#f5f5f5"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выбранное фото:"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <ImageView
                android:id="@+id/selected_photo_view"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"
                android:contentDescription="Выбранное фото" />

            <Button
                android:id="@+id/remove_photo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Удалить фото"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/attach_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_upload"
                android:contentDescription="Прикрепить фото"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <EditText
                android:id="@+id/message_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Введите сообщение"
                android:imeOptions="actionSend"
                android:inputType="text"
                android:maxLines="3"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отправить"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Экран изменения данных (скрыт по умолчанию) -->
    <LinearLayout
        android:id="@+id/change_data_content"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/deviceNameChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="@string/deviceName" />

        <EditText
            android:id="@+id/passwordChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/devicePassword"
            android:inputType="textPassword"
            android:minHeight="48dp"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/change_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_data"/>
    </LinearLayout>

    <!-- Экран устройств (скрыт по умолчанию) -->
    <ScrollView android:id="@+id/devices_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/btn_connect_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Подключить устройство"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Устройства аккаунта"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/account_devices_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">
                <!-- Сюда будут добавляться устройства аккаунта -->
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Подключенные устройства"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/connected_devices_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Сюда будут добавляться подключенные устройства -->
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <!-- Экран настроек (скрыт по умолчанию) -->
    <ScrollView
        android:id="@+id/settings_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Имя бота"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/bot_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Введите имя бота"/>

            <Button
                android:id="@+id/save_bot_name_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Подтвердить"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Нижняя панель кнопок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/main_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main"
            android:maxLines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/data_window_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/change_data"
            android:maxLines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/devices_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/devices"
            android:maxLines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/settings_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settings"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>
</LinearLayout>